{
	"name": "tory",
	"version": "0.4.3",
	"description": "Your directory utility belt",
	"license": "MIT",
	"repository": "papb/tory",
	"author": {
		"name": "Pedro Augusto de Paula Barbosa",
		"email": "papb1996@gmail.com"
	},
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"build": "del-cli dist && tsc",
		"prepack": "npm run build",
		"release": "np --no-2fa",
		"lint": "tsc --noEmit && xo",
		"test": "npm run build && ava"
	},
	"main": "dist/source",
	"types": "dist/source",
	"files": [
		"dist/source",
		"!*.map",
		"!*.test.*"
	],
	"keywords": [
		"directory",
		"folder",
		"file",
		"filesystem",
		"recursion",
		"util"
	],
	"dependencies": {
		"alpha-sort": "^3.0.0",
		"fs-jetpack": "^3.1.0",
		"hasha": "^5.2.0",
		"sort-on": "^4.1.0"
	},
	"devDependencies": {
		"@ava/typescript": "^1.1.1",
		"@types/node": "^10.17.28",
		"ava": "^3.11.0",
		"del-cli": "^3.0.1",
		"np": "https://github.com/pixelastic/np/tarball/c3ab2e3b053c7da0ce40a572ca1616273ac080f8",
		"source-map-support": "^0.5.19",
		"tempy": "^0.5.0",
		"type-fest": "^0.16.0",
		"typescript": "~3.9.7",
		"xo": "^0.32.1"
	},
	"ava": {
		"verbose": true,
		"require": [
			"source-map-support/register"
		],
		"typescript": {
			"rewritePaths": {
				"source/": "dist/source/",
				"test/": "dist/test/"
			}
		},
		"timeout": "2m"
	},
	"xo": {
		"rules": {
			"@typescript-eslint/prefer-readonly-parameter-types": "off",
			"@typescript-eslint/class-literal-property-style": "off",
			"unicorn/prevent-abbreviations": "off",
			"unicorn/no-for-loop": "off",
			"---ava/no-ignored-test-files": "off",
			"linebreak-style": [
				"error",
				"unix"
			],
			"object-curly-spacing": [
				"error",
				"always"
			]
		}
	}
}
