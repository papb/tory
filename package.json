{
	"name": "tory",
	"version": "0.4.3",
	"description": "Your directory utility belt",
	"license": "MIT",
	"repository": "papb/tory",
	"author": {
		"name": "Pedro Augusto de Paula Barbosa",
		"email": "papb1996@gmail.com"
	},
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"build": "del-cli dist && tsc",
		"prepack": "npm run build",
		"release": "np --no-2fa",
		"test": "tsc && xo && ava",
		"test-without-lint": "tsc && ava"
	},
	"main": "dist/source",
	"types": "dist/source",
	"files": [
		"dist/source",
		"!*.test.*"
	],
	"keywords": [
		"directory",
		"folder",
		"file",
		"filesystem",
		"recursion",
		"util"
	],
	"dependencies": {
		"alpha-sort": "3.0.0",
		"fs-jetpack": "2.2.3",
		"hasha": "5.2.0",
		"sort-on": "4.1.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "0.7.0",
		"@types/node": "13.9.2",
		"@typescript-eslint/eslint-plugin": "2.24.0",
		"@typescript-eslint/parser": "2.24.0",
		"ava": "3.5.0",
		"del-cli": "3.0.0",
		"eslint-config-xo-typescript": "0.26.0",
		"np": "https://github.com/pixelastic/np/tarball/c3ab2e3b053c7da0ce40a572ca1616273ac080f8",
		"tempy": "0.5.0",
		"type-fest": "0.12.0",
		"typescript": "3.8.3",
		"xo": "0.28.0"
	},
	"ava": {
		"verbose": true,
		"timeout": "2m"
	},
	"xo": {
		"extends": "xo-typescript",
		"extensions": [
			"ts"
		],
		"rules": {
			"unicorn/string-content": "off",
			"unicorn/prevent-abbreviations": "off",
			"object-curly-spacing": [
				"error",
				"always"
			],
			"ava/no-ignored-test-files": [
				"error",
				{
					"extensions": [
						"ts"
					],
					"files": [
						"!**/helpers"
					]
				}
			],
			"ava/no-import-test-files": [
				"error",
				{
					"extensions": [
						"ts"
					],
					"files": [
						"!**/helpers"
					]
				}
			]
		}
	}
}
